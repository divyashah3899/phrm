<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInfoDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Identity"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <ImageView
                android:id="@+id/img1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <!--            <Button-->
            <!--                android:id="@+id/btn_image1"-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginTop="25dp"-->
            <!--                android:layout_marginBottom="25dp"-->
            <!--                android:backgroundTint="@android:color/holo_blue_light"-->
            <!--                android:text="Edit Image"-->
            <!--                android:textColor="@android:color/white"-->
            <!--                android:textSize="18dp" />-->

            <EditText
                android:id="@+id/first_name1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/last_name1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Last Name" />
            <EditText
                android:id="@+id/birth_date1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <Spinner
                android:id="@+id/gender1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined">
            </Spinner>
            <Spinner
                android:id="@+id/blood_type1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined">
            </Spinner>
            <EditText
                android:id="@+id/nationality1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Nationality"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Relationship"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <Spinner
                android:id="@+id/relationship1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined">
            </Spinner>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Address"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <EditText
                android:id="@+id/house_no1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="House No./Block No."
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/society1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Society Name"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/street1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/postal_code1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Postal Code"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/town1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Town"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/state1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="State"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Contacts"
                    android:layout_marginTop="2dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>

            <EditText
                android:id="@+id/mobile1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Mobile No."
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/email1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"/>

            <!--            <Button-->
            <!--                android:id="@+id/btn_edit_info"-->
            <!--                android:layout_width="180dp"-->
            <!--                android:layout_height="58dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_marginTop="25dp"-->
            <!--                android:layout_marginBottom="25dp"-->
            <!--                android:backgroundTint="@android:color/holo_blue_light"-->
            <!--                android:text="Save"-->
            <!--                android:textColor="@android:color/white"-->
            <!--                android:textSize="18dp" />-->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>