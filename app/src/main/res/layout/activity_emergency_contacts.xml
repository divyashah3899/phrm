<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyContacts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#f0fff0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Emergency Contact Details"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Relative's Contact"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <EditText
                android:id="@+id/rel_name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Relative's Name"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/rel_contact_number"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#d3d3d3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:text="Relative's Contact"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp">
                </TextView>
            </FrameLayout>
            <EditText
                android:id="@+id/doc_name"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Doctor's Name"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/doc_contact_number"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>
            <Button
                android:id="@+id/btn_save_contact"
                android:layout_width="180dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="18dp" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>